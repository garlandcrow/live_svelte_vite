{
  "compilerOptions": {
    "verbatimModuleSyntax": true,
    "types": ["node", "vite/client"],
    "baseUrl": ".",
    "paths": {
      "$lib": ["svelte"],
      "$lib/*": ["svelte/*"]
    }
  },
  "include": ["svelte/**/*.ts", "svelte/**/*.js", "svelte/**/*.svelte", "js/**/*.ts", "js/**/*.js"]
}
